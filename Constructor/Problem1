import java.util.Scanner;

class EmployeeRevision {
    // Data members
    private String name;
    private double basic;
    private int experienceYears;
    private double increment;   // computed
    private double newBasic;    // basic + increment

    // Constructor
    EmployeeRevision() {
        name = "";
        basic = 0.0;
        experienceYears = 0;
        increment = 0.0;
        newBasic = 0.0;
    }

    // Input all details
    void input() {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter employee name: ");
        name = sc.nextLine();

        System.out.print("Enter basic salary: ");
        basic = sc.nextDouble();

        System.out.print("Enter experience in years: ");
        experienceYears = sc.nextInt();

        calculateIncrement();
    }

    // Calculate increment as per table
    private void calculateIncrement() {
        if (experienceYears < 0) {
            throw new IllegalArgumentException("Experience cannot be negative.");
        }

        if (experienceYears < 3) {
            increment = 1000 + 0.10 * basic;
        } else if (experienceYears < 5) {             // 3 years or more and < 5
            increment = 3000 + 0.12 * basic;
        } else if (experienceYears < 10) {            // 5 years or more and < 10
            increment = 5000 + 0.15 * basic;
        } else {                                      // 10 years or more
            increment = 8000 + 0.20 * basic;
        }

        newBasic = basic + increment;
    }

    // Display all details
    void display() {
        System.out.println("\n--- Salary Revision Details ---");
        System.out.println("Name              : " + name);
        System.out.printf ("Basic Salary      : %.2f%n", basic);
        System.out.println("Experience (years): " + experienceYears);
        System.out.printf ("Increment         : %.2f%n", increment);
        System.out.printf ("Revised Basic     : %.2f%n", newBasic);
    }

    // Driver
    public static void main(String[] args) {
        EmployeeRevision emp = new EmployeeRevision();
        emp.input();
        emp.display();
    }
}
